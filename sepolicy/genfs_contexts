# CPU tuning (sched / vm parameters)
genfscon proc /sys/vm/dirty_writeback_centisecs     u:object_r:proc_dirty:s0
genfscon proc /sys/vm/vfs_cache_pressure            u:object_r:proc_drop_caches:s0
genfscon proc /sys/vm/dirty_ratio                   u:object_r:proc_dirty:s0
genfscon proc /sys/kernel/sched_migration_cost_ns   u:object_r:proc_sched:s0

# GPU tuning (Adreno KGSL)
genfscon sysfs /sys/class/kgsl/kgsl-3d0/devfreq/available_frequencies u:object_r:sysfs_gpu:s0
genfscon sysfs /sys/class/kgsl/kgsl-3d0/devfreq/min_freq u:object_r:sysfs_gpu:s0
genfscon sysfs /sys/class/kgsl/kgsl-3d0/devfreq/max_freq u:object_r:sysfs_gpu:s0
